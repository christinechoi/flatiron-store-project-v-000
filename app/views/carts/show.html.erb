
<div class="log-box">
  <div class="cart">
    <h1>Your Cart</h1>

    <!-- <% if notice %>
      <p><%= notice %></p>
    <% end %> -->

    <% @cart.line_items.each do |line_item| %>

      <p><%= link_to line_item.item.title, item_path(line_item.item) %> |
        <%= "#{line_item.item.price.to_f/100}" %>
        | Quantity: <%= line_item.quantity %> |
        <% if line_item.item.inventory < 5 %>

        <strong>There are only <%= line_item.item.inventory %> left in stock.</strong>

        <% end %>
      </p>
    <% end %>
    <br>
    <p><strong>Order total:
        <% if current_user %>
        <%= "$#{current_user.current_cart.total.to_f/100}" %>
        <% else %>
        <%= number_to_currency.to_f(0) %>
        <% end %>
      </strong> </p>
      <br>

    <div class="actions">
    <% if current_user != nil %>
      <%= button_to 'Checkout', checkout_path %>
    <% end %>
  </div>
  </div>
</div>
