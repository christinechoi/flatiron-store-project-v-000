
<!--Place in sidebar-->
<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<br></br>

<!--list-->
<% @items.each do |item| %>
  <p><%= item.title %> | <%= number_to_currency(item.price) %>
     <%= button_to 'Add to Cart', line_items_path(item_id: item.id) %></p>
<% end %>
