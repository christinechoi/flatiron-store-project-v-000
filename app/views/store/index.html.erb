
<!--Place in sidebar-->
<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<br></br>


<!--list-->
<% @items.each do |item| %>
  <%if item.inventory != 0 %>
  <p><%= item.title %> | <%= "$#{item.price.to_f/100}" %>

    <% if current_user.current_cart %>
       <%= button_to 'Add to Cart', line_items_path(item_id: item.id) %>
    <% else %>
       <%= button_to 'Add to Cart', '/carts', :method => :post %>
    <% end %>
   </p>
  <% end %>
<% end %>
